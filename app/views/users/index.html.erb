<h1><%= User.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:introduction) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.introduction %></td>
        <td><%= link_to t('views.common.show'), user %></td>
        <% if current_user.id == user.id %>
        <td><%= link_to t('views.common.edit'), edit_user_registration_path %></td>
        <td><%= link_to t('views.common.destroy'), user_registration_path, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
<%= link_to t('views.common.back'), books_path %>
