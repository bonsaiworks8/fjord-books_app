<h1><%= t('followers') %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:email) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @followers.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to t('views.common.show'), user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @followers %>
